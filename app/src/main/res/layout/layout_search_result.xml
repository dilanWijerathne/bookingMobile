<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="5dp"
    android:padding="5dp"
    android:id="@+id/layout1">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="5dp"
        >


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_weight="2"
        android:padding="10dp"
        android:orientation="vertical"
        >

        <ImageView
            android:id="@+id/image"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
             android:layout_weight="1"
            />

        <TextView
            android:id="@+id/cod"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Etihad Airways"
            android:gravity="center"
            android:layout_weight="1"
            android:padding="5dp"
             android:textColor="#696969"/>

    </LinearLayout>

    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        android:gravity="center"
        android:padding="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginBottom="2dp"
            android:orientation="vertical"
            >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/deptime1"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:text="time1"
                    android:textColor="#000"
                    android:padding="5dp"
                    android:layout_weight="1"/>

                <TextView
                    android:id="@+id/dur1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dur"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#494949"
                    />

                <TextView
                    android:id="@+id/arrtime1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="arrtime1"
                    android:textColor="#000000"
                    android:gravity="right"
                    android:padding="5dp"
                    android:layout_weight="1"/>

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#c0c0c0"
               />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                >

                <TextView
                    android:id="@+id/depcode1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textColor="#000000"
                    android:text="SIN"

                    android:layout_weight="1"/>



                <TextView
                    android:id="@+id/arrcode1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CMB"
                    android:textColor="#000000"
                    android:gravity="right"
                      android:layout_weight="1"/>

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="1dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/deptime2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="time2"

                    android:layout_weight="1"
                    android:textColor="#000000"/>

                <TextView
                    android:id="@+id/dur2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="dur"
                    android:gravity="center"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#494949"
                    />
 
                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="arrtime2"
                    android:gravity="right"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#000000"
                    android:id="@+id/arrtime2" />

            </LinearLayout>

            <View
                android:layout_width="match_parent"
                android:layout_height="3dp"
                android:background="#c0c0c0"
                android:layout_span="3" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/depcode2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="SIN"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#000000"/>



                <TextView
                    android:id="@+id/arrcode2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="CMB"
                    android:gravity="right"
                    android:padding="5dp"
                    android:layout_weight="1"
                    android:textColor="#000000"/>

            </LinearLayout>

        </LinearLayout>




    </LinearLayout>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="2"
        android:padding="10dp">

        <TextView
            android:id="@+id/before"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RS. 25,000"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0000FF"
            />

        <TextView
            android:id="@+id/total"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="RS. 20,000"
            android:layout_weight="1"
            android:gravity="center"
            android:padding="5dp"
            android:textColor="#0000FF"
            />


        </LinearLayout>

        </LinearLayout>

    <TextView
        android:id="@+id/more"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:gravity="center"
        android:clickable="true"
        android:textColor="#0d3b89"
       />

</LinearLayout>