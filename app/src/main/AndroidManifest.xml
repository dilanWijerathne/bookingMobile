<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.user.flightresults" >

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:largeHeap="true"
        android:supportsRtl="true"
        android:theme="@style/AppTheme" >
        <activity android:name=".MainActivity" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".DisplayActivity" >
        </activity>
        <activity
            android:name=".MoreOptionActivity"
            android:label="@string/title_activity_more_option"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity
            android:name=".FlightDetails"
            android:label="@string/title_activity_fight_details"
            android:theme="@style/AppTheme.NoActionBar" >
        </activity>
        <activity android:name=".activity_flight_details" >
        </activity>
        <activity android:name=".flight_detail" >
        </activity>
    </application>

</manifest>
